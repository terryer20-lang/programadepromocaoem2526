    <div class="tooltip" id="tooltip"></div>

    <script>
        // æ–‡æª”åŠ è¼‰å®Œæˆå¾Œåˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            const header = document.getElementById('header');
            const menuToggle = document.querySelector('.menu-toggle');
            const sideMenu = document.getElementById('side-menu');
            const menuOverlay = document.getElementById('menu-overlay');
            const earthLoading = document.getElementById('earth-loading');
            const contentSection = document.getElementById('content-section');
            const langButtons = document.querySelectorAll('.lang-btn');
            const footer = document.getElementById('footer');
            
            let lastScrollTop = 0;
            let isMenuOpen = false;
            
            // æ»¾å‹•ç›£è½è®Šé‡
            let isFooterVisible = false;
            
            // D3.js è®Šæ•¸
            let width, height, svg, projection, path, globeGroup, countryPaths;
            
            // è‡ªå‹•æ—‹è½‰æ§åˆ¶è®Šæ•¸
            let autoRotate = true;
            let rotationSpeed = 0.1; // æ¯å¹€æ—‹è½‰è§’åº¦ï¼ˆç·©æ…¢è‡ªè½‰ï¼‰
            let animationId = null;
            
            // é é¢ç‹€æ…‹
            let isEarthLoaded = false;
            
            // æ¼¢å ¡èœå–®åˆ‡æ›åŠŸèƒ½
            function toggleMenu() {
                isMenuOpen = !isMenuOpen;
                sideMenu.classList.toggle('active', isMenuOpen);
                menuOverlay.classList.toggle('active', isMenuOpen);
                menuToggle.setAttribute('aria-expanded', isMenuOpen);
                document.body.style.overflow = isMenuOpen ? 'hidden' : '';
            }

            menuToggle.addEventListener('click', toggleMenu);
            menuOverlay.addEventListener('click', toggleMenu);

            // é—œé–‰èœå–®ç•¶é»æ“Šèœå–®å…§çš„éˆæ¥
            sideMenu.addEventListener('click', function(e) {
                if (e.target.tagName === 'A') {
                    toggleMenu();
                }
            });

            // èªè¨€åˆ‡æ›åŠŸèƒ½
            langButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const lang = this.getAttribute('data-lang');
                    
                    // æ›´æ–°æŒ‰éˆ•ç‹€æ…‹
                    langButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    console.log(`åˆ‡æ›èªè¨€è‡³: ${lang}`);
                    
                    if (lang === 'zh-CN') {
                        document.documentElement.lang = 'zh-CN';
                    } else if (lang === 'zh-TW') {
                        document.documentElement.lang = 'zh-TW';
                    } else if (lang === 'pt') {
                        document.documentElement.lang = 'pt';
                    }
                });
            });

            // æ»¾å‹•æ™‚éš±è—/é¡¯ç¤ºå°èˆªæ¬„å’Œé¡¯ç¤ºå‹•ç•«
            window.addEventListener('scroll', function() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                
                // éš±è—/é¡¯ç¤ºå°èˆªæ¬„
                if (!isMenuOpen) {
                    if (scrollTop > lastScrollTop && scrollTop > 100) {
                        header.classList.add('hidden');
                    } else {
                        header.classList.remove('hidden');
                    }
                }
                
                // æª¢æŸ¥é è…³æ˜¯å¦é€²å…¥è¦–åœ–
                if (!isFooterVisible && scrollTop > window.innerHeight * 0.7) {
                    footer.classList.add('visible');
                    isFooterVisible = true;
                }
                
                lastScrollTop = scrollTop;
            });
            
            // è‡ªå‹•æ—‹è½‰å‹•ç•«
            function autoRotateAnimation() {
                // å§‹çµ‚è‡ªå‹•æ—‹è½‰
                const rotate = projection.rotate();
                // å¾å³å‘å·¦æ—‹è½‰ï¼ˆå¢åŠ ç¶“åº¦å€¼ï¼‰
                projection.rotate([rotate[0] + rotationSpeed, rotate[1], rotate[2]]);
                
                // æ›´æ–°æ‰€æœ‰è·¯å¾‘
                if (countryPaths) {
                    countryPaths.attr("d", path);
                    d3.select(".graticule").attr("d", path);
                    d3.select(".sphere-outline").attr("d", path);
                }
                
                // ç¹¼çºŒå‹•ç•«å¾ªç’°
                animationId = requestAnimationFrame(autoRotateAnimation);
            }
            
            // é¡¯ç¤ºç•Œé¢å…ƒç´  - å¾æ¨™é¡Œåˆ—å¾ä¸Šå¾€ä¸‹é€²å…¥é–‹å§‹
            function showInterfaceElements() {
                // é¡¯ç¤ºåœ°çƒè¼‰å…¥æç¤º
                earthLoading.classList.add('visible');
                
                // å»¶é²å¾Œé¡¯ç¤ºæ¨™é¡Œåˆ—ï¼ˆå¾ä¸Šå¾€ä¸‹é€²å…¥ï¼‰
                setTimeout(() => {
                    header.classList.add('visible');
                }, 300);
                
                // åœ°çƒåŠ è¼‰å®Œæˆå¾Œé¡¯ç¤ºå…§å®¹å€åŸŸå’Œé è…³
                if (isEarthLoaded) {
                    showContentAndFooter();
                }
            }
            
            // é¡¯ç¤ºå…§å®¹å€åŸŸå’Œé è…³
            function showContentAndFooter() {
                // é¡¯ç¤ºå…§å®¹å€åŸŸï¼ˆæ·¡å…¥å’Œä¸Šç§»å‹•ç•«ï¼‰
                setTimeout(() => {
                    contentSection.classList.add('visible');
                }, 500);
                
                // é¡¯ç¤ºé è…³ï¼ˆå¾ä¸‹å¾€ä¸Šæ·¡å…¥ï¼‰
                setTimeout(() => {
                    footer.classList.add('visible');
                }, 800);
            }
            
            // åˆå§‹åŒ–D3åœ°çƒï¼ˆç°¡åŒ–ç‰ˆï¼Œåƒ…ç”¨æ–¼èƒŒæ™¯ï¼Œç·©æ…¢è‡ªè½‰ï¼‰
            function initEarth() {
                const container = document.getElementById('globe-container');
                width = container.clientWidth;
                height = container.clientHeight;
                
                svg = d3.select('#globe')
                    .attr('width', width)
                    .attr('height', height);
                
                // è¨­ç½®3Dæ­£å°„æŠ•å½±
                projection = d3.geoOrthographic()
                    .scale(Math.min(width, height) / 2.5)
                    .translate([width / 2, height / 2])
                    .rotate([-30, -20, 0]) // å›ºå®šåˆå§‹è¦–è§’
                    .precision(0.1);
                
                path = d3.geoPath(projection);
                
                // å‰µå»ºç¾¤çµ„
                globeGroup = svg.append('g');
                
                // ç¹ªè£½ç¶“ç·¯ç·šç¶²æ ¼
                const graticule = d3.geoGraticule();
                globeGroup.append("path")
                    .datum(graticule)
                    .attr("class", "graticule")
                    .attr("d", path)
                    .attr("fill", "none")
                    .attr("stroke", "rgba(255, 255, 255, 0.1)")
                    .attr("stroke-width", 0.3)
                    .attr("stroke-dasharray", "2,2");
                
                // è¼‰å…¥åœ°åœ–æ•¸æ“š
                d3.json('https://unpkg.com/world-atlas@2/countries-110m.json')
                    .then(worldData => {
                        // éš±è—è¼‰å…¥æç¤º
                        setTimeout(() => {
                            earthLoading.style.opacity = '0';
                            setTimeout(() => {
                                earthLoading.style.display = 'none';
                                earthLoading.classList.remove('visible');
                                
                                // æ¨™è¨˜åœ°çƒå·²åŠ è¼‰
                                isEarthLoaded = true;
                                
                                // é–‹å§‹ç·©æ…¢çš„è‡ªè½‰å‹•ç•«
                                autoRotateAnimation();
                                
                                // å¦‚æœæ¨™é¡Œåˆ—å·²é¡¯ç¤ºï¼Œå‰‡é¡¯ç¤ºå…§å®¹å€åŸŸå’Œé è…³
                                if (header.classList.contains('visible')) {
                                    showContentAndFooter();
                                }
                                
                            }, 500);
                        }, 800);
                        
                        const countries = topojson.feature(worldData, worldData.objects.countries).features;
                        
                        // ç¹ªè£½åœ‹å®¶ - ç°¡åŒ–ç‰ˆï¼Œåƒ…ç”¨æ–¼èƒŒæ™¯
                        countryPaths = globeGroup.selectAll(".country")
                            .data(countries)
                            .enter().append("path")
                            .attr("class", "country")
                            .attr("d", path)
                            .attr("fill", "rgba(255, 255, 255, 0.05)")
                            .attr("stroke", "rgba(255, 255, 255, 0.1)")
                            .attr("stroke-width", 0.2)
                            .style("cursor", "default");
                        
                        // ç¹ªè£½åœ°çƒå¤–è¼ªå»“
                        const sphereOutline = globeGroup.append("path")
                            .datum({type: "Sphere"})
                            .attr("class", "sphere-outline")
                            .attr("d", path)
                            .attr("fill", "none")
                            .attr("stroke", "rgba(255, 255, 255, 0.15)")
                            .attr("stroke-width", 0.5);
                        
                    })
                    .catch(err => {
                        console.error("è¼‰å…¥åœ°åœ–æ•¸æ“šå¤±æ•—:", err);
                        earthLoading.innerHTML = `
                            <div style="color:#e74c3c;">è¼‰å…¥åœ°åœ–æ•¸æ“šå¤±æ•—</div>
                            <div style="font-size:0.9rem; margin-top:0.5rem;">è«‹æª¢æŸ¥ç¶²çµ¡é€£æ¥å¾Œåˆ·æ–°é é¢</div>
                        `;
                        
                        // å³ä½¿è¼‰å…¥å¤±æ•—ä¹Ÿæ¨™è¨˜ç‚ºå·²åŠ è¼‰ä¸¦é¡¯ç¤ºå…§å®¹
                        isEarthLoaded = true;
                        if (header.classList.contains('visible')) {
                            showContentAndFooter();
                        }
                    });
                
                // éŸ¿æ‡‰å¼èª¿æ•´
                window.addEventListener('resize', function() {
                    width = container.clientWidth;
                    height = container.clientHeight;
                    
                    svg.attr('width', width).attr('height', height);
                    
                    projection
                        .scale(Math.min(width, height) / 2.5)
                        .translate([width / 2, height / 2]);
                    
                    // æ›´æ–°æ‰€æœ‰è·¯å¾‘
                    if (countryPaths) {
                        countryPaths.attr("d", path);
                        d3.select(".graticule").attr("d", path);
                        d3.select(".sphere-outline").attr("d", path);
                    }
                });
            }
            
            // åˆå§‹åŒ–é é¢
            document.documentElement.lang = 'zh-TW';
            
            // é é¢åŠ è¼‰å¾Œé–‹å§‹åˆå§‹åŒ–æµç¨‹
            window.addEventListener('load', function() {
                // ç«‹å³é–‹å§‹é¡¯ç¤ºç•Œé¢å…ƒç´ ï¼ˆå¾æ¨™é¡Œåˆ—é–‹å§‹ï¼‰
                showInterfaceElements();
                
                // åˆå§‹åŒ–åœ°çƒï¼ˆç·©æ…¢è‡ªè½‰èƒŒæ™¯ï¼‰
                setTimeout(initEarth, 500);
            });
            
            // å¦‚æœåœ°åœ–è¼‰å…¥å¤±æ•—çš„å¾Œå‚™æ–¹æ¡ˆ
            setTimeout(function() {
                if (earthLoading.style.display !== 'none') {
                    earthLoading.innerHTML = "åœ°åœ–è¼‰å…¥å¤±æ•—ï¼Œé¡¯ç¤ºèƒŒæ™¯åœ–...<br><small>è«‹æª¢æŸ¥ç¶²çµ¡é€£æ¥</small>";
                    
                    // æ¨™è¨˜åœ°çƒå·²åŠ è¼‰ï¼ˆå¤±æ•—ç‹€æ…‹ï¼‰
                    isEarthLoaded = true;
                    if (header.classList.contains('visible')) {
                        showContentAndFooter();
                    }
                }
            }, 10000);
        });
    </script>
</body>
</html>
